<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"
        parent="@android:style/Theme.Holo">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionBarTabStyle">@style/MyActionBarTab</item>
        <item name="android:actionBarTabBarStyle">@style/MyActionBarTabBar</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <!-- ActionBar styles -->　
    <style
        name="MyActionBar"
        parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/darkcyan</item>
    </style>
    <!-- ActionBarTab styles -->　
    <style
        name="MyActionBarTab"
        parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/actionbar_tab_indicator</item>
    </style>
    <!-- Bar styles -->　
    <style
        name="MyActionBarTabBar"
        parent="@android:style/Widget.Holo.ActionBar.TabBar">
        <item name="android:background">@color/darkcyan</item>
        <!--
        <item name="android:showDividers">none</item> 　
        <item name="android:dividerPadding">0dp</item>   -->
    </style>

    </resources>
