<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_parentlayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="start"
    android:layout_marginBottom="@dimen/text_post_margin">
    <TextView
        android:id="@+id/card_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@color/color_secondary_text"
        android:textSize="@dimen/textview_size_normal"/>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_tv_name"
        card_view:cardCornerRadius="@dimen/card_radius"
        card_view:cardBackgroundColor ="@color/color_post_background"
        card_view:cardElevation="@dimen/card_post_elevation">

        <TextView
            android:id="@+id/card_tv_post"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/text_padding"
            android:paddingRight="@dimen/text_padding"
            android:paddingTop="@dimen/text_top_bottom_padding"
            android:paddingBottom="@dimen/text_top_bottom_padding"
            android:textColor="@color/color_post_text"/>
    </android.support.v7.widget.CardView>
</RelativeLayout>